@using CafeeAFM.Models;
@model List<add_sweets>
@using (Html.BeginForm("MenuSweet", "Home", FormMethod.Post))
{
    <div class="row" id="firstSweeetRow">
        @if (Model.Count != 0)
        {
            foreach (var value in Model)
            {
                <div class="col-lg-6">
                    @*<h1 class="mb-5">@value.Sweet.SweetName</h1>*@
                 

                    <div class="row align-items-center mb-5">
                        <div class="col-4 col-sm-4">
                            <img class="w-100 rounded-circle mb-3 mb-sm-0" src="~/img/bancake.jpg" alt="">
                            <h5 class="menu-price">$5</h5>
                        </div>
                        <div class="col-6 col-sm-6">
                            @*<h4>@value.Addition.AddType</h4>
        <p class="m-0">@value.Addition.Description</p>*@
                            @Html.TextBox("SweetName", value: value.Sweet.SweetName, htmlAttributes: new { @readonly = "readonly" })
                            @Html.TextBox("AddType", value: value.Addition.AddType, htmlAttributes: new { @readonly = "readonly" })
                            @Html.TextBox("Description", value: value.Addition.Description, htmlAttributes: new { @readonly = "readonly" })
                            <button>Request</button>
                        </div>
                        @*<div class="col-2 col-sm-3"></div>*@
                    </div>
                </div>

            }
        }
    </div>
}